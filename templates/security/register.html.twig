{% extends 'base.html.twig' %}

{% block description 'Créez vous un compte Youtube !' %}
{% block title 'S\'inscrire' %}

{% block content_tag_attributes 'form-signin w-100 m-auto' %}

{% block content %}
    <div class="mt-5 mb-5 pt-5 pb-5 w-25 m-auto">
        {{ form_start(registrationForm) }}

        <h1 class="h3 mb-3 fw-normal">S'enregistrer</h1>

        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}
        <button class="btn btn-primary w-100 py-2" type="submit">Register</button>
        <p class="mt-5 mb-3 text-body-secondary">&copy; 2017–2023</p>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}

